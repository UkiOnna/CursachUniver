<Page x:Class="MyCollection.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyCollection"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid>
        <Image Source="Images\back.jpeg" Stretch="Fill">
            <Image.Effect>
                <BlurEffect Radius="20"/>
            </Image.Effect>
        </Image>
        <TextBlock Margin="301,37,273,381" TextWrapping="Wrap" Text="Добро пожаловать в MyCollection!" RenderTransformOrigin="0.305,-0.788"/>
        <Button Content="Просмотреть коллекцию" HorizontalAlignment="Left" Margin="301,125,0,0" VerticalAlignment="Top" Width="212" Click="CollectionButtonClick"/>
        <Button Content="Добавить в коллекцию" HorizontalAlignment="Left" Margin="301,216,0,0" VerticalAlignment="Top" Width="212" Click="AddButtonClick"/>
    </Grid>
</Page>
